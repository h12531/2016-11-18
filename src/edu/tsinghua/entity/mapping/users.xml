<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    <class name="edu.tsinghua.entity.Users" table="users">
    	<id name="userId" column="userid" type="int">
    	<generator class="increment"></generator>
    	</id>
    <property name="loginName" type="java.lang.String" length="50"></property>
    <property name="loginPwd" type="java.lang.String" length="50"></property>		
		<property name="telephone" type="java.lang.String" length="50"></property>
		<property name="userName" type="java.lang.String" length="50"></property>
		<property name="isAdmin" type="java.lang.String" length="50"></property>
    
    
    </class>
    </hibernate-mapping>